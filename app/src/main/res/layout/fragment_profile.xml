<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   tools:context=".ui.user.ProfileFragment">
    <!-- Username EditText -->

    <!-- Password EditText -->


    <!-- Edit Button -->

    <!-- Save Button (Initially Invisible) -->
    <Button
            android:id="@+id/editButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edit"
            android:layout_marginTop="43dp"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout3"
            android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent"/>
    <Button
            android:id="@+id/saveButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Save"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="43dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintTop_toTopOf="@+id/editButton"
            app:layout_constraintBottom_toBottomOf="@+id/editButton"/>

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/linearLayout2"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="103dp" app:layout_constraintEnd_toEndOf="parent">
        <TextView
                android:text="User Name: "
                android:layout_weight="0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/textView4"/>
        <EditText
                android:id="@+id/usernameProfile"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Username"
                android:enabled="false"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/linearLayout3" android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout2" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="1dp" android:layout_marginEnd="1dp">
        <TextView
                android:text="Password: "
                android:layout_weight="0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/textView5"/>
        <EditText
                android:id="@+id/passwordProfile"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:text="Password"
                android:enabled="false"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>