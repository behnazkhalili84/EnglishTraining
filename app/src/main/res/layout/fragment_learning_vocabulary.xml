<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context=".ui.learningvocabulary.LearningVocabulary">

    <TextView
            android:id="@+id/firstPageTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/lesson1"
            android:textSize="18sp"
            android:paddingBottom="8dp"/>

    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/firstPageRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginBottom="16dp"/>

    <TextView
            android:id="@+id/secondPageTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/second_page_items"
            android:textSize="18sp"
            android:paddingBottom="8dp"/>

    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/secondPageRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>

</LinearLayout>